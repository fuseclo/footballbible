<%= form_for(:player, :url => {:action => 'create'}) do |f| %>
	 <%= f.text_field :player_name, :class => 'form', :placeholder => 'Enter Player name..' %><br>
	<%= f.text_field :club_id, :class => 'form', :placeholder => 'Enter club ID..' %><br>
	<%= f.text_field :player_nation, :class => 'form', :placeholder => 'Enter players nation..' %><br>
	<%= f.text_field :player_number, :class => 'form', :placeholder => 'Enter players kit number..' %><br>
	<%= f.text_field :player_goals, :class => 'form', :placeholder => 'Enter player goals..' %><br>
	<%= f.text_field :player_assists, :class => 'form', :placeholder => 'Enter player assists' %><br>
	<%= f.text_field :player_passes, :class => 'form', :placeholder => 'Enter player passes' %><br>
	<%= f.text_field :player_image, :class => 'form', :placeholder => 'Enter player image url..' %><br>
	<%= f.text_field :player_position, :class => 'form', :placeholder => 'Enter player position e.g. striker' %><br>
	<%= submit_tag("Create Player", :class => 'form') %>
<% end %>