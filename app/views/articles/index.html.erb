<ul>
	<% @articles.each do |article| %>
	<li>
		<div class="news-container">
			<div class="news-title">
				<h2><%= article.article_title %></h2> 

				<p><%= article.article_small %><%= link_to "Read more!", {:action => 'show', :id => article.id} %></p>
				<p>Category:<%= article.player.player_name %>
					<%= article.club.club_name %>
				</p>
			</div>
		</div>
	</li>
	<% end %>
</ul>