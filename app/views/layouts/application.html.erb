<!DOCTYPE html>
<html>
<head>
  <title>PremBible</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    
        <header id="header">
            <div id="header-inner">
                <div id="header-logo">PremBible</div>
                <div id="header-nav">
                    <nav>
                        <a href="#"><%= link_to 'HOME', '/' %></a>
                        <a href="#"><%= link_to 'PLAYERS', {:controller => 'players', :action => 'index'} %></a>
                        <a href="#"><%= link_to 'CLUBS', {:controller => 'clubs', :action => 'index'} %></a> 
                    </nav>
                </div>
            </div>
        </header>

        <div id="main">            
            <div id="news">
                <%= yield %>
            </div>
        </div>
</body>
</html>
